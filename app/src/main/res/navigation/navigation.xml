<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="mobg5.g55019.mobg5_project.screen.login.LoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
        <action
            android:id="@+id/action_loginFragment_to_swipeFragment"
            app:destination="@id/swipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="mobg5.g55019.mobg5_project.screen.register.RegisterFragment"
        android:label="RegisterFragment"
        tools:layout="@layout/fragment_register"
        >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerFragment_to_swipeFragment"
            app:destination="@id/swipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/swipeFragment"
        android:name="mobg5.g55019.mobg5_project.screen.home.SwipeFragment"
        android:label="SwipeFragment"
        tools:layout="@layout/fragment_swipe"
        >
        <action
            android:id="@+id/action_swipeFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment" />
        <action
            android:id="@+id/action_swipeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouriteFragment"
        android:name="mobg5.g55019.mobg5_project.screen.fav.FavouriteFragment"
        android:label="FavouriteFragment"
        tools:layout="@layout/fragment_favourite"
        android:background="#FFFFFF">
        <action
            android:id="@+id/action_favouriteFragment_to_beerInformationFragment"
            app:destination="@id/beerInformationFragment"
            app:popUpTo="@id/favouriteFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_favouriteFragment_to_swipeFragment"
            app:destination="@id/swipeFragment" />
        <action
            android:id="@+id/action_favouriteFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/beerInformationFragment"
        android:name="mobg5.g55019.mobg5_project.informations.BeerInformationFragment"
        android:label="BeerInformationFragment"
        tools:layout="@layout/fragment_beer_information"
        >
        <argument
            android:name="beer"
            app:argType="mobg5.g55019.mobg5_project.model.Beer" />
        <action
            android:id="@+id/action_beerInformationFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment" />
        <action
            android:id="@+id/action_beerInformationFragment_to_swipeFragment"
            app:destination="@id/swipeFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="mobg5.g55019.mobg5_project.screen.settings.SettingsFragment"
        android:label="SettingsFragment"
        tools:layout="@layout/fragment_settings"
        >
        <action
            android:id="@+id/action_settingsFragment_to_favouriteFragment"
            app:destination="@id/favouriteFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_swipeFragment"
            app:destination="@id/swipeFragment" />
    </fragment>

</navigation>