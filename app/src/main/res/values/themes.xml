<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MOBG5Project" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->
        <!-- Marche pas -->
        <item name="android:colorPrimary">@color/white</item>
        <item name="android:colorPrimaryDark">@color/white</item>
        <item name="colorControlNormal">@color/purple_200</item>
        <item name="colorControlActivated">@color/purple_700</item>
    </style>

    <style name="Theme.MOBG5Project.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Marche pas -->
        <item name="android:colorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/purple_200</item>
        <item name="colorControlActivated">@color/purple_700</item>
    </style>
    <style name="Theme.MOBG5Project.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.MOBG5Project.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
