<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="GlowOnHover">
        <item name="android:background">#111</item>
        <item name="android:textColor">#FFFFFF</item>
        <!--<item name="android:borderRadius">10dp</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">0dp</item>
        <item name="android:outlineProvider">none</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <!--<item name="android:clipToOutline">false</item>-->
        <item name="android:overScrollMode">ifContentScrolls</item>
        <item name="android:scrollbarStyle">insideOverlay</item>
        <item name="android:scrollbars">none</item>
        <!--<item name="android:border">0dp</item>-->
        <item name="android:padding">0dp</item>
    </style>

</resources>